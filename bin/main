# Game instructions

# 

class Player
	def initialize(name, letter)
		@name = name
		@letter = letter
	end

	def picknumber(value)
		values = 1..9.to_a
		if !values.include? value
			return "#{value} is not allowed, pick a number from 1 to 9"
		end
		@value = value
	end

end

class Game
	def initialize(name, letter)
		@num = nil
		@emptySquares = nil
		@val = 0
		@squares = {
			'0' => nil,
			'1' => nil,
			'2' => nil,
			'3' => nil,
			'4' => nil,
			'5' => nil,
			'6' => nil,
			'7' => nil,
			'8' => nil
		}
	end

	def Play
	end

	def reset 
	end

	def stop 
	end

	def checkmatch 
	end
end

class Scoreboard

	attr_reader :x_score
	attr_reader :o_score

	def initialize
		@x_score = 0
		@o_score = 0
	end

	def increment_x
		@x_score += 1
	end

	def increment_y
		@o_score += 1
	end
end

class Tournament
	def initialize(limit)
		@limit = limit
	end
end

class Automode < Game
	def initialize(limit)
		@limit = limit
	end
end
 
